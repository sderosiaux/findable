{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["./src/*"],
      "@findable/database": ["../../packages/database/src"],
      "@findable/database/*": ["../../packages/database/src/*"],
      "@findable/shared": ["../../packages/shared/src"],
      "@findable/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}