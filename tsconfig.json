{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@findable/shared": ["packages/shared/src"],
      "@findable/shared/*": ["packages/shared/src/*"],
      "@findable/database": ["packages/database/src"],
      "@findable/database/*": ["packages/database/src/*"],
      "@findable/ui": ["packages/ui/src"],
      "@findable/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", "coverage"]
}